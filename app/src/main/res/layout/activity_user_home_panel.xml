<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".userHomePanelActivity">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="38sp" />

    <ImageView
        android:id="@+id/logoutb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_toRightOf="@+id/t1"
        android:background="@drawable/background_icon"
        android:src="@drawable/ic_logout"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Welcome to the app here is very friendly environment for you."
        android:textColor="#C7FDFAFA"
        android:textFontWeight="100"
        android:textSize="18sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/firstCardView"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/t2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginRight="33dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:paddingRight="10dp"
        app:cardBackgroundColor="#61A4BC"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/postBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Search university"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/firstCardView2"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_184sdp"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/firstCardView"
        android:elevation="10dp"
        android:padding="10dp"
        android:paddingRight="10dp"
        app:cardBackgroundColor="#5B7DB1"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <TextView
            android:id="@+id/newsfeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Track request"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/firstCardView3"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/firstCardView"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:layout_marginRight="3dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:paddingRight="10dp"
        app:cardBackgroundColor="#B6EA7A"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <TextView
            android:id="@+id/sellitemsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="apply for scolorship"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/firstCardView4"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/firstCardView2"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_34sdp"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/firstCardView3"
        android:elevation="10dp"
        android:padding="10dp"
        android:paddingRight="10dp"
        app:cardBackgroundColor="#F582A7"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/pricing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />


    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/firstCardView4"
        android:layout_marginTop="20dp"
        android:src="@drawable/footer1" />


</RelativeLayout>