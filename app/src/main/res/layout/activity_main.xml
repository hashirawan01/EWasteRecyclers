<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".MainActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idimage"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:src="@drawable/elogo2"
        app:civ_border_color="@color/black">

    </de.hdodenhof.circleimageview.CircleImageView>



    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="190dp"
            android:fontFamily="@font/montserrat"
            android:text="Sign in or sign up"
            android:textColor="@color/black"
            android:textSize="33sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_xml"
            android:textColorHint="@color/black"
            android:hint="Email"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="50dp"
            android:layout_below="@id/editText_name"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/black"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_xml"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/montserrat"
        android:text="SIGN IN"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/or_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login1"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:text="or Sign in with"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <LinearLayout
        android:id="@+id/iconLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/or_sign_in"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_13sdp"
            android:paddingLeft="@dimen/_13sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:background="@drawable/black_circle"
            android:src="@drawable/fb"
            android:layout_marginLeft="80dp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="10dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/black_circle"
            android:src="@drawable/google"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/black_circle"
            android:layout_gravity="left"
            android:layout_marginTop="25dp"
            android:src="@drawable/iphone"
            android:layout_marginLeft="53dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/iconLinear"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="17sp"
            android:layout_marginLeft="70dp"
            />
        <TextView
            android:id="@+id/new_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:fontFamily="@font/montserrat"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            />

    </LinearLayout>


</RelativeLayout>