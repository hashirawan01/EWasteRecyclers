<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    android:orientation="vertical"
    tools:context=".signUpActivity">

        <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="700"
        android:padding="10dp"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <EditText
        android:id="@+id/TextPersonName"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="50dp"
        android:fontFamily="@font/montserrat"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_xml"
        android:ems="17"
        android:hint="First Name"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />
        <EditText
            android:id="@+id/TextPersonName2"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="50dp"
            android:fontFamily="@font/montserrat"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_xml"
            android:hint="Last NAme"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </LinearLayout>

    <EditText
        android:id="@+id/TextEmailAddress"
        android:layout_width="@dimen/_259sdp"
        android:layout_height="50dp"
        android:fontFamily="@font/montserrat"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_xml"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />
    <EditText
        android:id="@+id/phonnumber"
        android:layout_width="@dimen/_259sdp"
        android:layout_height="50dp"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/TextEmailAddress"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_xml"
        android:drawablePadding="10dp"
        android:ems="17"
        android:hint="Phone Number"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="@dimen/_259sdp"
        android:layout_height="50dp"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/TextEmailAddress"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_xml"
        android:drawablePadding="10dp"
        android:ems="17"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/register"
        android:layout_width="@dimen/_259sdp"
        android:layout_height="50dp"
        android:layout_below="@id/forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/montserrat"
        android:text="Continuo"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/or_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login1"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:text="or Sign in with"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/iconLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_below="@id/or_sign_in"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="@dimen/_12sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:background="@drawable/black_circle"
            android:src="@drawable/fb"
            android:layout_marginLeft="80dp"
            />

        <ImageView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="9dp"
            android:layout_marginLeft="53dp"
            android:background="@drawable/black_circle"
            android:src="@drawable/google"
            />

    </LinearLayout>









